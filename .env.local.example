# Postgres connection used by web + worker
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/db"

# NextAuth
NEXTAUTH_SECRET="replace-with-strong-random"
NEXTAUTH_URL="http://localhost:3000"
APP_URL="http://localhost:3000"

# Resend email provider
RESEND_API_KEY="re_..."
EMAIL_FROM="Gifty Gets <alerts@yourdomain.com>"

# Stripe billing
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_PRICE_BASIC="price_..."
STRIPE_PRICE_PRO="price_..."

# AI provider
AI_PROVIDER="openai"
OPENAI_API_KEY="sk_..."
AI_MODEL="gpt-4.1-mini"
AI_EMBEDDINGS_MODEL="text-embedding-3-small"

# Domain + fetch safety controls
ALLOWED_DOMAINS="example.myshopify.com,amazon.com"
FETCH_USER_AGENT="EAAlertsBot/1.0"
FETCH_TIMEOUT_MS="8000"
FETCH_MAX_BYTES="1500000"

# Job worker controls
JOBS_CONCURRENCY="10"
JOBS_MAX_RETRIES="5"

# Alert gating
CONFIDENCE_MIN="0.85"
ALERT_DEDUPE_MINUTES="120"
ALERT_RATE_LIMIT_PER_DAY="5"
MIN_CHECK_SECONDS="300"
MAX_CHECK_SECONDS="21600"

# App UX defaults
RATE_LIMIT_MAX_PER_HOUR="10"
NEXT_PUBLIC_APP_NAME="Gifty Gets"
NEXT_PUBLIC_SUPPORT_EMAIL="support@giftygets.com"

# Optional: local auth bypass (must stay false in production)
AUTH_BYPASS="false"
