generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

enum PlanKey {
  BASIC
  PRO
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
}

enum TrackerStatus {
  ACTIVE
  BACKOFF
  PAUSED
  PAYMENT_REQUIRED
  UNSUPPORTED
}

enum CheckRunStatus {
  PENDING
  RUNNING
  SUCCEEDED
  FAILED
}

enum AlertStatus {
  SENT
  NOT_SENT
}

model User {
  id                String          @id @default(cuid())
  name              String?
  email             String?         @unique
  emailVerified     DateTime?
  image             String?
  role              UserRole        @default(USER)
  timezone          String?         @default("UTC")
  notificationEmail String?
  emailOptOut       Boolean         @default(false)
  stripeCustomerId  String?         @unique
  accounts          Account[]
  sessions          Session[]
  trackers          Tracker[]
  subscriptions     Subscription[]
  checkRuns         CheckRun[]
  traces            AgentTrace[]
  alerts            AlertEvent[]
  rateLedger        RateLimitLedger[]
  intentProfiles    IntentProfile[]
  feedbackEvents    FeedbackEvent[]
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Plan {
  id                 String   @id @default(cuid())
  key                PlanKey  @unique
  name               String
  monthlyPriceCents  Int
  maxTrackers        Int
  maxChecksPerDay    Int
  createdAt          DateTime @default(now())
  subscriptions      Subscription[]
}

model Subscription {
  id                    String             @id @default(cuid())
  userId                String
  planId                String
  stripeSubscriptionId  String?            @unique
  status                SubscriptionStatus @default(ACTIVE)
  currentPeriodEnd      DateTime?
  createdAt             DateTime           @default(now())
  updatedAt             DateTime           @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan Plan @relation(fields: [planId], references: [id], onDelete: Restrict)
}

model Tracker {
  id             String        @id @default(cuid())
  userId         String
  name           String
  url            String
  normalizedDomain String
  status         TrackerStatus @default(ACTIVE)
  frequencyTier  String        @default("hourly")
  lastRunAt      DateTime?
  nextRunAt      DateTime?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  rules TrackerRule[]
  checkRuns CheckRun[]
  alerts AlertEvent[]
}

model TrackerRule {
  id          String   @id @default(cuid())
  trackerId   String   @unique
  variantSize String?
  variantColor String?
  priceCapCents Int?
  createdAt   DateTime @default(now())

  tracker Tracker @relation(fields: [trackerId], references: [id], onDelete: Cascade)
}

model CheckRun {
  id          String         @id @default(cuid())
  userId      String
  trackerId   String
  status      CheckRunStatus @default(PENDING)
  startedAt   DateTime?
  finishedAt  DateTime?
  error       String?
  metadata    Json?
  createdAt   DateTime       @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  tracker Tracker @relation(fields: [trackerId], references: [id], onDelete: Cascade)
  traces AgentTrace[]
  alerts AlertEvent[]
}

model AgentTrace {
  id          String   @id @default(cuid())
  userId      String
  checkRunId  String
  usedFallback Boolean @default(false)
  planJson    Json?
  summary     String?
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  checkRun CheckRun @relation(fields: [checkRunId], references: [id], onDelete: Cascade)
  toolCalls ToolCall[]
  toolResults ToolResult[]
}

model ToolCall {
  id          String   @id @default(cuid())
  agentTraceId String
  stepId       String
  tool         String
  args         Json
  createdAt    DateTime @default(now())

  trace AgentTrace @relation(fields: [agentTraceId], references: [id], onDelete: Cascade)
}

model ToolResult {
  id          String   @id @default(cuid())
  agentTraceId String
  stepId       String
  ok           Boolean
  data         Json?
  error        String?
  metrics      Json?
  createdAt    DateTime @default(now())

  trace AgentTrace @relation(fields: [agentTraceId], references: [id], onDelete: Cascade)
}

model AlertEvent {
  id           String      @id @default(cuid())
  userId       String
  trackerId    String
  checkRunId   String?
  status       AlertStatus
  whySent      String?
  whyNotSent   String?
  dedupeKey    String
  falsePositive Boolean     @default(false)
  falsePositiveNote String?
  createdAt    DateTime    @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  tracker Tracker @relation(fields: [trackerId], references: [id], onDelete: Cascade)
  checkRun CheckRun? @relation(fields: [checkRunId], references: [id], onDelete: SetNull)

  @@unique([trackerId, dedupeKey])
}

model RateLimitLedger {
  id        String   @id @default(cuid())
  userId    String
  trackerId String?
  key       String
  bucket    String
  count     Int      @default(0)
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, key, bucket])
}

model WaitlistEntry {
  id         String   @id @default(cuid())
  email      String   @unique
  intentTags String[] @default([])
  createdAt  DateTime @default(now())
}

model IntentProfile {
  id                 String   @id @default(cuid())
  userId             String
  intentTags         String[] @default([])
  preferredPriceMin  Int?
  preferredPriceMax  Int?
  confidence         Float    @default(0)
  updatedAt          DateTime @updatedAt
  createdAt          DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model FeedbackEvent {
  id        String   @id @default(cuid())
  userId    String
  trackerId String?
  type      String
  payload   Json?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model AdapterHealth {
  id            String   @id @default(cuid())
  domain        String   @unique
  lastSuccessAt DateTime?
  lastFailureAt DateTime?
  failureCount  Int      @default(0)
  backoffUntil  DateTime?
  updatedAt     DateTime @updatedAt
}
